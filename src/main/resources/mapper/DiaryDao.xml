    <!--通过主键修改数据-->
    <update id="update">
        update Mailapp.diary
        <set>
            <if test="d_executor != null and d_executor != ''">
                d_executor = #{d_executor},
            </if>
            <if test="d_execution != null and d_execution != ''">
                d_execution = #{d_execution},
            </if>
            <if test="d_time != null">
                d_time = #{d_time},
            </if>
            <if test="d_state != null">
                d_state = #{d_state},
            </if>
        </set>
        where d_id = #{dId}
