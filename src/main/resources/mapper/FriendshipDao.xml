<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skpl.mailapp.dao.FriendshipDao">

    <resultMap type="com.skpl.mailapp.entity.Friendship" id="FriendshipMap">
        <result property="fNo" column="f_no" jdbcType="INTEGER"/>
        <result property="uEmail1" column="u_email1" jdbcType="VARCHAR"/>
        <result property="uEmail2" column="u_email2" jdbcType="VARCHAR"/>
        <result property="fNickname" column="f_nickname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="FriendshipMap">
        select
          f_no, u_email1, u_email2, f_nickname
        from Mailapp.friendship
        where f_no = #{fNo}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="FriendshipMap">
        select
          f_no, u_email1, u_email2, f_nickname
        from Mailapp.friendship
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="FriendshipMap">
        select
          f_no, u_email1, u_email2, f_nickname
        from Mailapp.friendship
        <where>
            <if test="fNo != null">
                and f_no = #{fNo}
            </if>
            <if test="uEmail1 != null and uEmail1 != ''">
                and u_email1 = #{uEmail1}
            </if>
            <if test="uEmail2 != null and uEmail2 != ''">
                and u_email2 = #{uEmail2}
            </if>
            <if test="fNickname != null and fNickname != ''">
                and f_nickname = #{fNickname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="fNo" useGeneratedKeys="true">
        insert into Mailapp.friendship(f_no, u_email1, u_email2, f_nickname)
        values (#{fNo}, #{uEmail1}, #{uEmail2}, #{fNickname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update Mailapp.friendship
        <set>
            <if test="uEmail1 != null and uEmail1 != ''">
                u_email1 = #{uEmail1},
            </if>
            <if test="uEmail2 != null and uEmail2 != ''">
                u_email2 = #{uEmail2},
            </if>
            <if test="fNickname != null and fNickname != ''">
                f_nickname = #{fNickname},
            </if>
        </set>
        where f_no = #{fNo}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from Mailapp.friendship where f_no = #{fNo}
    </delete>

</mapper>