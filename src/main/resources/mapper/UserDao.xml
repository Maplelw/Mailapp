<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skpl.mailapp.dao.UserDao">

    <resultMap type="com.skpl.mailapp.entity.User" id="UserMap">
        <result property="u_id" column="u_id" jdbcType="INTEGER"/>
        <result property="u_email" column="u_email" jdbcType="VARCHAR"/>
        <result property="u_name" column="u_name" jdbcType="VARCHAR"/>
        <result property="u_password" column="u_password" jdbcType="VARCHAR"/>
        <result property="u_type" column="u_type" jdbcType="VARCHAR"/>
        <result property="u_time" column="u_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--根据编号查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          u_id, u_email, u_name, u_password, u_type, u_time
        from Mailapp.user
        where u_id = #{uId}
    </select>

    <!--根据邮箱号查询单个-->
    <select id="queryByEmail" resultMap="UserMap">
        select
            u_id, u_email, u_name, u_password, u_type, u_time
        from Mailapp.user
        where u_email = #{uEmail}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          u_id, u_email, u_name, u_password, u_type, u_time
        from Mailapp.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          u_id, u_email, u_name, u_password, u_type, u_time
        from Mailapp.user
        <where>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
            <if test="uEmail != null and uEmail != ''">
                and u_email = #{uEmail}
            </if>
            <if test="uName != null and uName != ''">
                and u_name = #{uName}
            </if>
            <if test="uPassword != null and uPassword != ''">
                and u_password = #{uPassword}
            </if>
            <if test="uType != null and uType != ''">
                and u_type = #{uType}
            </if>
            <if test="uTime != null">
                and u_time = #{uTime}
            </if>
            and
            u_type != 'logoff'
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uId" useGeneratedKeys="true">
        insert into Mailapp.user(u_email, u_name, u_password, u_type, u_time)
        values (#{uEmail}, #{uName}, #{uPassword}, #{uType}, #{uTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update Mailapp.user
        <set>
            <if test="uEmail != null and uEmail != ''">
                u_email = #{uEmail},
            </if>
            <if test="uName != null and uName != ''">
                u_name = #{uName},
            </if>
            <if test="uPassword != null and uPassword != ''">
                u_password = #{uPassword},
            </if>
            <if test="uType != null and uType != ''">
                u_type = #{uType},
            </if>
            <if test="uTime != null">
                u_time = #{uTime},
            </if>
        </set>
        where u_id = #{uId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from Mailapp.user where u_id = #{uId}
    </delete>

</mapper>